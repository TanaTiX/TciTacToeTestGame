<UserControl x:Class="View.GameEndUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
			 xmlns:comm="clr-namespace:Common;assembly=Common"
			 d:DataContext="{x:Type comm:IGameEndVM}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="600">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="127*"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Background="DarkSeaGreen" FontSize="35" TextAlignment="Center">Игра окончена</TextBlock>
		<Grid Grid.Row="1" Background="Aqua">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0" Background="DarkSeaGreen" VerticalAlignment="Center" TextAlignment="Center" FontSize="30" Text="Победитель: Вася"></TextBlock>
			<Image Grid.Column="1" Source="Resources/Images/cross.png"></Image>
		</Grid>
		<Button Grid.Row="2" Command="{Binding RevengeCommand, Mode=OneWay}">Реванш</Button>
		<Button Grid.Row="3" Command="{Binding ShowFirstScreenCommand, Mode=OneWay}">Основное меню</Button>
	</Grid>
</UserControl>
