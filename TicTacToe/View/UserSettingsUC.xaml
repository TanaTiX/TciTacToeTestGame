<UserControl x:Class="View.UserSettingsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" Height="700">
	<UserControl.Resources>
		<local:BoolToVisibilityConverter x:Key="InputToVisibility"/>
		<Style TargetType="{x:Type TextBox}" x:Key="PropmptingTextBox">
			<Setter Property="BorderBrush" Value="Black"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type TextBox}">
						<Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
							<Grid>
								<TextBlock TextAlignment="Center" Text="Ваше имя...">
									<TextBlock.Visibility>
										<MultiBinding Converter="{StaticResource InputToVisibility}">
											<Binding ElementName="inputText" Path="IsFocused"/>
											<Binding ElementName="inputText" Path="Text"/>
										</MultiBinding>
									</TextBlock.Visibility>
								</TextBlock>
								<TextBox x:Name="inputText" TextAlignment="Center" Background="Transparent"/>
							</Grid>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"></RowDefinition>
			<RowDefinition Height="auto"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="auto"></RowDefinition>
		</Grid.RowDefinitions>

		<TextBox Grid.Row="0" FontWeight="Bold" FontSize="40" Style="{StaticResource PropmptingTextBox}"/>
		<Button Grid.Row="1">
			<Image  Source="Resources\Images\arrow.png"/>
		</Button>
		<ListBox Grid.Row="2" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled">
			<!--<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\cross.png"></Image>
			<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\no.png"></Image>
			<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\yes.png"></Image>
			<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\zero.png"></Image>-->
		</ListBox>
		<Button Grid.Row="3">
			<Image Source="Resources\Images\arrow.png">
				<Image.LayoutTransform>
					<RotateTransform Angle="180"/>
				</Image.LayoutTransform>
			</Image>
		</Button>
	</Grid>
</UserControl>
