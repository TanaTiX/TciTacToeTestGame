<UserControl x:Class="View.SettingsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
			 xmlns:comm="clr-namespace:Common;assembly=Common"
			 DataContext="{x:Type comm:ISettingsVM}"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="600">
	
	
		
			
			
	<UserControl.Resources>
		<local:BoolToVisibilityConverter x:Key="InputToVisibility"/>
		<Style TargetType="{x:Type TextBox}" x:Key="PropmptingTextBox">
			<Setter Property="BorderBrush" Value="Black"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type TextBox}">
						<Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
							<Grid>
								<TextBlock TextAlignment="Center" Text="Ваше имя...">
									<TextBlock.Visibility>
										<MultiBinding Converter="{StaticResource InputToVisibility}">
											<Binding ElementName="inputText" Path="IsFocused"/>
											<Binding ElementName="inputText" Path="Text"/>
										</MultiBinding>
									</TextBlock.Visibility>
								</TextBlock>
								<TextBox x:Name="inputText" TextAlignment="Center" Background="Transparent"/>
							</Grid>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<DataTemplate x:Key="UserSettings" DataType="{x:Type local:SettingsUC}" x:Name="test">


			<DataGridCell Background="#c0c0c0">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="auto"></RowDefinition>
						<RowDefinition Height="auto"></RowDefinition>
						<RowDefinition></RowDefinition>
						<RowDefinition Height="auto"></RowDefinition>
					</Grid.RowDefinitions>
					
					<TextBox Grid.Row="0" FontWeight="Bold" FontSize="40" Style="{StaticResource PropmptingTextBox}"/>
					<Button Grid.Row="1">
						<Image  Source="Resources\Images\arrow.png"/>
					</Button>
					<ListBox Grid.Row="2" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled">
						<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\cross.png"></Image>
						<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\no.png"></Image>
						<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\yes.png"></Image>
						<Image Margin="0, 63, 0, 63" Width="200" Height="200" Source="Resources\Images\zero.png"></Image>
					</ListBox>
					<Button Grid.Row="3">
						<Image Source="Resources\Images\arrow.png">
							<Image.LayoutTransform>
								<RotateTransform Angle="180"/>
							</Image.LayoutTransform>
						</Image>
					</Button>
				</Grid>
				
				
			</DataGridCell>
		</DataTemplate>
	</UserControl.Resources>
	
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"></RowDefinition>
			<RowDefinition Height="auto"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="40"></RowDefinition>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Background="Gold" HorizontalAlignment="Stretch" TextAlignment="Center" Height="auto">Настройки</TextBlock>
		<StackPanel Grid.Row="1" Orientation="Horizontal" Width="600"><!--Хорошо бы переделать-->
			<Label Width="300" Background="AliceBlue" HorizontalContentAlignment="Center" Content="Пользователь № 1"></Label>
			<Label Width="300" Background="AliceBlue" HorizontalContentAlignment="Center" Content="Пользователь № 2"></Label>
		</StackPanel>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<DataGridCell Grid.Column="0" ContentTemplate="{StaticResource ResourceKey=UserSettings}"/>
			<DataGridCell Grid.Column="1" ContentTemplate="{StaticResource ResourceKey=UserSettings}"/>
			<!--<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Label Grid.Row="0" Grid.Column="0" Background="DarkSeaGreen" VerticalContentAlignment="Center">Имя:</Label>
			<TextBox Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Это поле должно быть заполнено</TextBox>
			
			<Label Grid.Row="1" Grid.Column="0" Background="DarkSeaGreen" VerticalContentAlignment="Center">Фишка:</Label>
			<ListBox Grid.Row="1" Grid.Column="1" SelectionMode="Single"></ListBox>-->
		</Grid>
		<Button Grid.Row="3" Command="{Binding ExitSettingsCommand}">Сохранить настройки и выйти</Button>

	</Grid>
</UserControl>