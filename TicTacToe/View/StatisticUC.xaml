<UserControl x:Class="View.StatisticUC"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="600"
             xmlns:comm="clr-namespace:Common;assembly=Common">
	<d:UserControl.DataContext>
		<local:StatisticVM />
	</d:UserControl.DataContext>
	<StackPanel>
		<TextBlock Background="DarkSeaGreen" TextAlignment="Center" Height="40">Статистика</TextBlock>
		<DataGrid ItemsSource="{Binding Users}" AutoGenerateColumns="False" Height="620" VerticalScrollBarVisibility="Auto">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Игрок" Binding="{Binding Name}" Width="auto"/>
				<DataGridTextColumn Header="Игр" Binding="{Binding Total}" Width="100*"/>
				<DataGridTextColumn Header="Выигрышей" Binding="{Binding Win}" Width="100*"/>
				<DataGridTextColumn Header="Проигрышей" Binding="{Binding Lose}" Width="100*"/>
			</DataGrid.Columns>
		</DataGrid>
		<Button Content="Закрыть статистику" Command="{Binding ExitStatisticCommand}" Height="40"></Button>
	</StackPanel>
</UserControl>
