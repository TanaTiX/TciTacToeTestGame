<UserControl x:Class="View.StatisticUC"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:comm="clr-namespace:Common;assembly=Common">
	<d:UserControl.DataContext>
		<local:StatisticVM />
	</d:UserControl.DataContext>
	<DataGrid ItemsSource="{Binding Users}">
		<DataGrid.Columns>
			<DataGridTextColumn Header="Игрок" Binding="{Binding Name}"/>
			<DataGridTextColumn Header="Игр" Binding="{Binding Total}"/>
			<DataGridTextColumn Header="Выигрышей" Binding="{Binding Win}"/>
			<DataGridTextColumn Header="Проигрышей" Binding="{Binding Lose}"/>
		</DataGrid.Columns>
	</DataGrid>
</UserControl>
