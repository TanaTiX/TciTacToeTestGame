<UserControl x:Class="View.GameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
			 xmlns:comm="clr-namespace:Common;assembly=Common"
			 d:DataContext="{x:Type comm:IGameVM}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="600">
    <Grid>
		<!--<Image Source="Resources/Images/cross.png"></Image>-->
		<DataGrid Grid.Row="{Binding RowsCount}" Grid.Column="{Binding ColumnsCount}" ItemsSource="{Binding Cells}" BorderThickness="2" BorderBrush="Black">
			
			
		</DataGrid>
    </Grid>
</UserControl>
