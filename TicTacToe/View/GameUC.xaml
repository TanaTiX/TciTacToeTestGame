<UserControl x:Class="View.GameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
			 xmlns:comm="clr-namespace:Common;assembly=Common"
			 xmlns:model="ModelLibrary"
			 xmlns:dataGrid2D="http://gu.se/DataGrid2D"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="600">
	
	
	<UserControl.DataContext>
		<local:GameVM />
	</UserControl.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" HorizontalAlignment="Center">Вася vs Петя</TextBlock>

		<Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Background="AliceBlue">
			
			<ItemsControl ItemsSource="{Binding Cells}">
				<ItemsControl.Resources>
					<local:CellToImageLinkConverter x:Key="CellConverter"/>
				</ItemsControl.Resources>
				<ItemsControl.ItemsPanel>
					
					<ItemsPanelTemplate>

						<UniformGrid Background="AliceBlue" Columns="3" Rows="3">
						
						</UniformGrid>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate DataType="{x:Type comm:CellDto}">
						<TextBlock x:Name="TestTexy" Width="150" Height="150">
							<TextBlock.Text>
								<MultiBinding Converter="{StaticResource CellConverter}">
									<Binding ElementName="TestText" Path="Name"/>
								</MultiBinding>
							</TextBlock.Text>
						</TextBlock>
						<!--<TextBlock Width="150" Height="150" Text="{Binding Name}"/>-->
						<!--<Image Source="Resources/Images/cross.png"/>-->
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</Grid>
		<!--example-->
		<!--<Grid Grid.Row="1" Background="AliceBlue"
			  Width="{Binding Height, RelativeSource={RelativeSource Self}}"
			  Height="{Binding Width, RelativeSource={RelativeSource Self}}">

			<DataGrid Background="LightPink" Margin="10"
				x:Name="AutoColumns"
				dataGrid2D:ItemsSource.Array2D="{Binding Path=Data2D}"
				SelectionUnit="Cell"
				IsReadOnly="True">
				<dataGrid2D:Cell.Template>
					<DataTemplate>
						<TextBlock Width="150" Height="150" Text="{Binding Path=.}"/>
					</DataTemplate>
				</dataGrid2D:Cell.Template>
			</DataGrid>
		</Grid>-->

		<Button Grid.Row="2">Сдаться</Button>
	</Grid>
</UserControl>
