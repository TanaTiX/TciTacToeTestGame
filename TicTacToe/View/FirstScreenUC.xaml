<UserControl x:Class="View.FirstScreenUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
			 xmlns:comm="clr-namespace:Common;assembly=Common"
			 d:DataContext="{x:Type comm:IFirstScreenVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	
    <Grid>
		<StackPanel>
			<Button Command="{Binding SrartNewGameCommand, Mode=OneWay}">Начать игру</Button>
			<Button Command="{Binding RepairGameCommand, Mode=OneWay}">Восстановить отложенную игру</Button>
			<Button Command="{Binding ShowSettingsCommand, Mode=OneWay}">Настройки</Button>
			<Button Command="{Binding ShowStatisticCommand, Mode=OneWay}">Статистика</Button>
		</StackPanel>
	</Grid>
</UserControl>
